doctype html
html(lang='ja', prefix='og: http://ogp.me/ns#')
  - if (ua === 'mobile')
    - var bodyClass = 'is-mobile'
    - var photoCount = 8
  - else if (ua === 'tablet')
    - var bodyClass = 'is-tablet'
    - var photoCount = 12
  - else
    - var bodyClass = 'is-pc'
    - var photoCount = 20

  head
    meta(charset='UTF-8')
    title!= title

    meta(name='description', content='#{description}')
    meta(name='robots', content='index,follow')
    meta(name='viewport', content='width=device-width')
    meta(property='og:title', content='#{title}')
    meta(property='og:type', content='website')
    meta(property='og:url', content='#{url}')
    meta(property='og:description', content='#{description}')
    meta(property='og:site_name', content='#{title}')
    //- meta(property='og:image', content='#{url}/images/ogp.jpg')
    meta(property='og:locale', content='ja_JP')
    meta(name='twitter:card', content='summary')

    link(rel='stylesheet', href='stylesheets/style.css')

    script(src='https://hkiy.tumblr.com/api/read/json?num=#{photoCount}&type=photo')
    script(src='javascripts/hkiy.js')

  body(class='#{bodyClass}')
    .background#js-background

    .overlay

    .content
      .title
        h1.title__text
          a(href='/') #{title}
        p.title__description #{description}

      .button#js-button 早く帰ってイカやりてぇ

      p.counter
        | You are the
        span.counter__strong#js-count #{id}
        span.counter__ordinal#js-ordinal
        | HKIY.

    small.copyright
      | by
      a(href='https://twitter.com/ryo_dg', target='_blank') ryo_dg