@import '_base'

body
  position relative
  width 100vw
  height 100vh

.background
  opacity 0.9
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  pointer-events none
  background-size cover
  background-position 50% 50%

.content
  position relative
  top 50%
  left 50%
  transform translate(-50%, -50%)
  text-align center

  > *
    width 100%
    text-align center

.title
  > *
    line-height 1
    margin 0

  &__text
    font-size rem(110px)
    letter-spacing 0.2em
    text-indent 0.3em
    display inline-block

    a
      display block
      width 100%
      height 100%

  &__description
    font-size rem(18px)
    letter-spacing 0.4em
    text-indent 0.4em
    font-weight bold
    margin-top 10px

.button
  font-weight bold
  width auto
  display inline-block
  margin-top 70px
  background-color $bgColor_button
  color $textColor_default
  border-radius 8px
  padding 18px 80px
  cursor pointer
  transition: all 300ms easing('out-expo')
  box-shadow 0 2px 0 0 darken($bgColor_button, 30%)

  &:hover
    background-color lighten($bgColor_button, 10%)

  &:active
    box-shadow 0 0 0 0 darken($bgColor_button, 30%)
    transform translateY(2px)

.counter
  padding 0
  margin-top 15px

  &__strong
    margin-left 0.3em
    font-weight bold
    font-size rem(18px)

  &__ordinal
    margin-right 0.5em
    font-weight bold