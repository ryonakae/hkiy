@import 'kouto-swiss'
@import '_config'

font-face( 'ProximaNova', '../fonts/ProximaNova-Regular', normal, normal, formats: woff )
font-face( 'ProximaNova', '../fonts/ProximaNova-Regular-Italic', normal, italic, formats: woff )
font-face( 'ProximaNova', '../fonts/ProximaNova-Semibold', bold, normal, formats: woff )
font-face( 'ProximaNova', '../fonts/ProximaNova-Semibold-Italic', bold, italic, formats: woff )
font-face( 'Noto Sans Japanese', '../fonts/NotoSansCJKjp-DemiLight', normal, normal, formats: woff2 woff )
font-face( 'Noto Sans Japanese', '../fonts/NotoSansCJKjp-Bold', bold, normal, formats: woff2 woff )

normalize()
box-sizing-reset()

body
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  padding 0 !important
  font-family $fontFamily_default
  font-size $fontSize_default
  line-height $lineHeight_default
  letter-spacing $letterSpacing_default
  background-color $bgColor_default
  font-kerning normal
  color $textColor_default
  word-wrap break-word
  overflow-wrap break-word

  & ::-moz-selection
    background $bgColor_selection
    color $textColor_selection

  & ::selection
    background $bgColor_selection
    color $textColor_selection

  +retina-query(only screen, 2)
    -webkit-font-smoothing antialiased

a
  color $textColor_link
  transition: all 300ms ease
  text-decoration none

  .is-pc &:hover
    opacity 0.7

h1, h2, h3, h4, h5, h6
  line-height $lineHeight_title

  a
    color inherit

.background
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  pointer-events none
  background-size cover
  background-position 50% 50%

@keyframes rainbow
    0%
        background-color: #ed4e4e
    14%
        background-color: #ed8f4e
    28%
        background-color: #edd54e
    42%
        background-color: #edd54e
    56%
        background-color: #4eeced
    70%
        background-color: #4ea9ed
    84%
        background-color: #bc4eed
    100%
        background-color: #ed4e4e

.overlay
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  pointer-events none
  animation rainbow 2.5s linear
  animation-iteration-count infinite
  mix-blend-mode color-burn
  opacity 0.7


.content
  position relative
  top 50%
  left 50%
  transform translate(-50%, -50%)
  text-align center

  > *
    width 100%
    text-align center

.title
  > *
    line-height 1
    margin 0

  &__text
    font-size rem(110px)
    letter-spacing 0.2em
    text-indent 0.3em
    display inline-block

    a
      display block
      width 100%
      height 100%

    +media-query($mq_sp)
      font-size rem(80px)

  &__description
    font-size rem(18px)
    letter-spacing 0.3em
    text-indent 0.3em
    font-weight bold
    margin-top 10px

    +media-query($mq_sp)
      margin-top 5px
      font-size rem(14px)
      letter-spacing 0.3em

.button
  font-weight bold
  width 330px
  display inline-block
  margin-top 70px
  background-color $bgColor_button
  color $textColor_default
  border-radius 8px
  padding 18px 0
  cursor pointer
  transition: all 300ms easing('out-expo')
  box-shadow 0 2px 0 0 darken($bgColor_button, 30%)

  body.is-pc &:hover
    background-color lighten($bgColor_button, 10%)

  &:active
    box-shadow 0 0 0 0 darken($bgColor_button, 30%)
    transform translateY(2px)

  &.is-disable
    pointer-events none
    background-color $bgColor_buttonDisable
    box-shadow 0 0 0 0 $bgColor_buttonDisable
    transform translateY(2px)

    body.is-pc &:hover
      background-color $bgColor_buttonDisable

  +media-query($mq_sp)
    width 280px
    margin-top 45px
    padding 15px 0

.counter
  padding 0
  margin-top 15px

  &__strong
    margin-left 0.3em
    font-weight bold
    font-size rem(18px)

  &__ordinal
    margin-right 0.5em
    font-weight bold

  +media-query($mq_sp)
    margin-top 10px

.copyright
  font-size rem(10px)
  position fixed
  bottom 10px
  right 10px
  opacity 0.5

  a
    margin-left 0.5em