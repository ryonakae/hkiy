{
  "name": "hkiy",
  "scripts": {
    "build": "browserify -t babelify assets/javascripts/hkiy_dev.js -o assets/javascripts/hkiy.js",
    "watch": "npm run build && watchify -d -t babelify assets/javascripts/hkiy_dev.js -o assets/javascripts/hkiy.js -v",
    "build:prod": "npm run build && uglifyjs assets/javascripts/hkiy.js --stats -o assets/javascripts/hkiy.js",
    "start": "babel-node app.js"
  },
  "engines": {
    "node": "4.x",
    "npm": "2.1.x"
  },
  "dependencies": {
    "autoprefixer-stylus": "^0.9.2",
    "babel": "^6.5.2",
    "babel-cli": "^6.7.7",
    "babel-preset-es2015": "^6.6.0",
    "body-parser": "^1.15.0",
    "express": "^4.13.4",
    "jade": "^1.11.0",
    "jquery": "^2.2.3",
    "kouto-swiss": "^0.12.0",
    "moment": "^2.13.0",
    "path": "^0.12.7",
    "pg": "^4.5.3",
    "stylus": "^0.54.2",
    "ua-parser-js": "^0.7.10"
  },
  "devDependencies": {
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "uglifyjs": "^2.4.10",
    "watchify": "^3.7.0"
  }
}
